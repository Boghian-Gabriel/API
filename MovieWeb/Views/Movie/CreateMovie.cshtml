@model API.Model.Movie

@{
    ViewData["Title"] = "CreateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>In this page you can add a movie</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display: none  ">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" id="floatingInput" placeholder="the movie name" />
                <label asp-for="Title" for="floatingInput"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="RealeseDate" class="form-control" id="floatingInput" placeholder="the datetime" />
                <label asp-for="RealeseDate" for="floatingInput"></label>
                <span asp-validation-for="RealeseDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="IdRefGenre" class="control-label" id="floatingInput" placeholder="the genre name"></label>
                <select asp-for="IdRefGenre" class="form-control" asp-items="ViewBag.IdRefGenre"></select>
            </div>
            <p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button class="btn btn-secondary btnStyle"><a style="text-decoration:none; color:white" asp-action="GetAllMovies">Back to movies list</a></button>                          
            </div>
            </p>
        </form>
    </div>
</div>

@{
    try
    {
        if(ViewBag.msg != null)
        {
            <label style="color:darkgreen">@ViewBag.msg</label>
        }
    }catch(Exception ex)
    {
        
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
