@model API.Model.Genre

@{
    ViewData["Title"] = "GetGenre";
}


<h3 class="font-weight-bold"> The @Model.GenreName genre.</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="display:none">
            @Html.DisplayNameFor(model => model.IdGenre)
        </dt>
        <dd class="col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.IdGenre)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.GenreName)
